{
  "name": "@unstoppablejs/substrate-codegen",
  "version": "0.0.0-experimental-d05a4674-ed4e-466d-bf47-213030678671",
  "author": "Josep M Sobrepere (https://github.com/josepot)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unstoppablejs/unstoppablejs.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "node": {
        "module": "./dist/substrate-codegen.js",
        "import": "./dist/substrate-codegen.mjs",
        "require": "./dist/index.cjs"
      },
      "browser": "./dist/substrate-codegen.js",
      "default": "./dist/substrate-codegen.js"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/substrate-codegen.js",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:esm && npm run build:cjs:dev && npm run build:cjs:prod",
    "build:esm": "esbuild src/index.ts --bundle --external:@noble/hashes --external:scale-ts --external:@unstoppablejs/* --outfile=./dist/substrate-codegen.js --target=es2020 --format=esm --sourcemap && cp ./dist/substrate-codegen.js ./dist/substrate-codegen.mjs && cp ./dist/substrate-codegen.js.map ./dist/substrate-codegen.mjs.map",
    "build:cjs:dev": "esbuild src/index.ts --bundle --external:@noble/hashes --external:scale-ts --external:@unstoppablejs/* --outfile=./dist/substrate-codegen.cjs.development.js --target=es2020 --format=cjs --sourcemap",
    "build:cjs:prod": "esbuild src/index.ts --bundle --external:@noble/hashes --external:scale-ts --external:@unstoppablejs/* --outfile=./dist/substrate-codegen.cjs.cjs.production.min.js --target=es2020 --format=cjs --minify --sourcemap",
    "build:ts": "tsc -p ./tsconfig-build.json --outDir ./dist --skipLibCheck --emitDeclarationOnly && rm -rf ./dist/internal",
    "test": "jest --coverage",
    "lint": "prettier --check README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepack": "npm run build"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "@unstoppablejs/utils": "^1.1.0",
    "scale-ts": "^1.1.0"
  }
}
