{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@unstoppablejs/substrate-codecs --workspace=@unstoppablejs/substrate-client && npm run build --workspace=@unstoppablejs/substrate-codegen --workspace=@unstoppablejs/substrate-bindings",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "test": "npm run test --workspaces",
    "prepare": "husky install"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "esbuild": "^0.14.38",
    "husky": ">=6",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "dependencies": {
    "@fast-check/vitest": "^0.0.6",
    "vitest": "^0.34.1"
  }
}
